{% extends 'base.html.twig' %}

{% block head %}
    <link rel="stylesheet" href="{{ asset('styles/compare.css') }}">
{% endblock %}
{% block body %}

    <section>
        <div class="compare-title">
            <div class="title-content">
                <p>Сравнение</p>
                <span>
                Добро пожаловать на страницу сравнения спортивных секций!<br>
                Здесь вы можете детально сравнить выбранные вами спортивные секции,
                    чтобы найти идеальный вариант, соответствующий вашим потребностям и интересам.
                </span>
            </div>
        </div>
        <div class="compare-container">
            <div class="course-compare-wrapper">
                <div class="course-compare-table table-head">
                    <div class="head">
                        <div class="item item-first">
                            <div class="name">Секция</div>
                        </div>

                        <div class="item item-course">
                            <div class="section-name">
                                <b>Зенит</b>
                            </div>
                        </div>

                    </div>
                </div>
                <div class="course-compare-table table-body">
                    <div class="row">
                        <div class="item item-first">
                            <div class="name">Для кого</div>
                        </div>
                        <div class="item">
                            <div class="text">Для всех</div>
                        </div>

                    </div>
                    <div class="row">
                        <div class="item item-first">
                            <div class="name">Адрес</div>
                        </div>
                        <div class="item">
                            <div class="text">ул. Антонова, 39А, Пенза
                                (ДС Олимпийский)
                            </div>
                        </div>

                    </div>

                    <div class="row">
                        <div class="item item-first">
                            <div class="name">Формат</div>
                        </div>
                        <div class="item">
                            <div class="text">Формат: Очные
                                занятия 3-4 раза
                                в неделю
                            </div>
                        </div>

                    </div>
                    <div class="row">
                        <div class="item item-first">
                            <div class="name">Особенности</div>
                        </div>
                        <div class="item">
                            <div class="text">Тренировки с
                                профессионалами
                                лиги
                            </div>
                        </div>

                    </div>
                    <div class="row">
                        <div class="item item-first">
                            <div class="name">Направление</div>
                        </div>
                        <div class="item">
                            <div class="text">Футбол</div>
                        </div>

                    </div>
                    <div class="row">
                        <div class="item item-first">
                            <div class="name"></div>
                        </div>
                        <div class="item">
                            <div class="action">
                                <button class="entries">Записаться</button>
                                <button class="delete-button"><img src="{{ asset('images/Trash.svg') }}"
                                                                   alt="delete-button"></button>
                            </div>
                        </div>

                    </div>
                </div>
            </div>

        </div>


    </section>

{% endblock %}