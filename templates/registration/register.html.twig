{% extends 'base.html.twig' %}


{% block body %}
<div class="registration-body">
        <div class="form-header">
                <h5 class="modal-title" id="authModalLabel">Регистрация</h5>
        </div>
        {{ form_start(registrationForm, {'attr': {'id': 'registration-form'}}) }}

        {% if form_errors(registrationForm) %}
                <div class="alert alert-danger">
                        {{ form_errors(registrationForm) }}
                </div>
        {% endif %}

        <div class="form-group">
                {{ form_row(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
                {{ form_row(registrationForm.login, {'attr': {'class': 'form-control'}, 'label': 'Логин'}) }}
        </div>
        <div class="form-group">
                {{ form_row(registrationForm.name, {'attr': {'class': 'form-control'}, 'label': 'Имя'}) }}
        </div>
        <div class="form-group">
                {{ form_row(registrationForm.surname, {'attr': {'class': 'form-control'}, 'label': 'Фамилия'}) }}
        </div>
        <div class="form-group">
                {{ form_row(registrationForm.patronymic, {'attr': {'class': 'form-control'}, 'label': 'Отчество (Необязательное)'}) }}
        </div>
        <div class="form-group">
                {{ form_row(registrationForm.phoneNumber, {'attr': {'class': 'form-control'}, 'label': 'Номер телефона'}) }}
        </div>
        <div class="form-group">
                {{ form_row(registrationForm.plainPassword, {'attr': {'class': 'form-control'}, 'label': 'Пароль'}) }}
        </div>
        <div class="form-group checkbox-container">
                {{ form_row(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input checkbox'}, 'label': 'Согласие с правилами'}) }}
        </div>

        <button type="submit" class="auth">Зарегистрироваться</button>

        {{ form_end(registrationForm) }}

        <p class="switch-page">Уже есть аккаунт? <a href="{{ path('app_login') }}">Войти</a></p>
</div>

{% endblock %}