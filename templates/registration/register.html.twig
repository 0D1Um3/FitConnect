<div class="registration-body">
        {{ form_start(registrationForm, {'attr': {'id': 'registration-form'}}) }}

        {% if form_errors(registrationForm) %}
                <div class="alert alert-danger">
                        {{ form_errors(registrationForm) }}
                </div>
        {% endif %}

        <div class="form-group">
                {{ form_row(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
                {{ form_row(registrationForm.login, {'attr': {'class': 'form-control'}, 'label': 'Логин'}) }}
        </div>
        <div class="form-group">
                {{ form_row(registrationForm.name, {'attr': {'class': 'form-control'}, 'label': 'Имя'}) }}
        </div>
        <div class="form-group">
                {{ form_row(registrationForm.surname, {'attr': {'class': 'form-control'}, 'label': 'Фамилия'}) }}
        </div>
        <div class="form-group">
                {{ form_row(registrationForm.patronymic, {'attr': {'class': 'form-control'}, 'label': 'Отчество'}) }}
        </div>
        <div class="form-group">
                {{ form_row(registrationForm.phoneNumber, {'attr': {'class': 'form-control'}, 'label': 'Номер телефона'}) }}
        </div>
        <div class="form-group">
                {{ form_row(registrationForm.plainPassword, {'attr': {'class': 'form-control'}, 'label': 'Пароль'}) }}
        </div>
        <div class="form-group">
                {{ form_row(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}, 'label': 'Согласие с правилами'}) }}
        </div>

        <button type="submit" class="btn btn-lg btn-dark btn-block">Зарегистрироваться</button>

        {{ form_end(registrationForm) }}

        <p class="mt-3">Уже есть аккаунт? <a href="#" id="login-link">Войти</a></p>
</div>
